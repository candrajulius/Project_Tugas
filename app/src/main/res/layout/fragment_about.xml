<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/image_icon"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="261dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ms_glow_icon"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/text_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_icon"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="70sp"
            android:textColor="@android:color/white"
            android:lineHeight="135sp"
            android:text="VAYOLA’S INVENTORY"
            tools:targetApi="p" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:id="@+id/text_description"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_icon"
            app:layout_constraintStart_toStartOf="@id/text_icon"
            app:layout_constraintEnd_toEndOf="@id/text_icon"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text="APLIKASI PENGELOLA DATA VAYOLA INVENTORY"
            android:textAlignment="center"
            android:textStyle="bold"
            android:lineHeight="30sp"
            android:textColor="@android:color/white"
            tools:targetApi="p" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/text_description"
            app:layout_constraintEnd_toEndOf="@id/text_description"
            app:layout_constraintTop_toBottomOf="@id/text_description"
            android:layout_marginTop="30dp"
            android:lineHeight="30sp"
            android:text="VAYOLA’S INVENTORY Versi 1.0"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:targetApi="p" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>